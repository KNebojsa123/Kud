@*@model EmployeeManagementAsp.Models.Employee     ovako smo koristili prije nego smo namespace prebacili u _ViewImports.cshtml*@ 
@model Employee
    
@{
    ///Layout = "~/Views/Shared/_Layout.cshtml"; ovo brisemo zato sto je sada to definisano u _VIewStart.cshtml, i onda kad mjenjamo nesto mjenamo samo u ViewStart.cshtml
    ///kod u layout filu se izvrsava prije ijednog pojedinacnog View-a
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>
                <h4>Department : @Model.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>